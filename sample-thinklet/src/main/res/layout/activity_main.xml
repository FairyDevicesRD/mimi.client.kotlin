<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/label_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/token"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EMPTY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/label_token"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/label_record_asr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASR(Record):"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_token" />

    <TextView
            android:id="@+id/record_asr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_record_asr"
            app:layout_constraintTop_toBottomOf="@id/label_token" />

    <TextView
            android:id="@+id/label_realtime_asr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASR(Realtime):"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_record_asr" />

    <TextView
            android:id="@+id/realtime_asr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_realtime_asr"
            app:layout_constraintTop_toBottomOf="@id/label_record_asr" />

</androidx.constraintlayout.widget.ConstraintLayout>
